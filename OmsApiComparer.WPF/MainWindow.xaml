<Window x:Class="OmsApiComparer.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OmsApiComparer.WPF"

        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ListBox ItemsSource="{Binding Requests}" DisplayMemberPath="MethodAndPath"
                 SelectedItem="{Binding SelectedRequest.Value}" />

        <ScrollViewer Grid.Column="1">
            <StackPanel>
                <GroupBox Header="Query string parameters">
                    <DataGrid ItemsSource="{Binding SelectedRequest.Value.QueryString}" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Property Name" Binding="{Binding A.Name}" />
                            <DataGridTextColumn Header="Tobacco" Binding="{Binding A.Value}" />
                            <DataGridTextColumn Header="NCP" Binding="{Binding B.Value}" />
                            <DataGridTextColumn Header="OTP" Binding="{Binding C.Value}" />
                            <DataGridTextColumn Header="Milk" Binding="{Binding D.Value}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
                <GroupBox Header="Request headers">
                    <DataGrid ItemsSource="{Binding SelectedRequest.Value.Headers}" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Property Name" Binding="{Binding A.Name}" />
                            <DataGridTextColumn Header="Tobacco" Binding="{Binding A.Value}" />
                            <DataGridTextColumn Header="NCP" Binding="{Binding B.Value}" />
                            <DataGridTextColumn Header="OTP" Binding="{Binding C.Value}" />
                            <DataGridTextColumn Header="Milk" Binding="{Binding D.Value}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
                <GroupBox Header="Request objects">
                    <ItemsControl ItemsSource="{Binding SelectedRequest.Value.RequestObjects}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type local:ObjectViewModel}">
                                <GroupBox Header="{Binding Name}">
                                    <DataGrid ItemsSource="{Binding Properties}" AutoGenerateColumns="False" IsReadOnly="True">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Property Name" Binding="{Binding A.Name}" />
                                            <DataGridTextColumn Header="Tobacco" Binding="{Binding A.Value}" />
                                            <DataGridTextColumn Header="NCP" Binding="{Binding B.Value}" />
                                            <DataGridTextColumn Header="OTP" Binding="{Binding C.Value}" />
                                            <DataGridTextColumn Header="Milk" Binding="{Binding D.Value}" />
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </GroupBox>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
